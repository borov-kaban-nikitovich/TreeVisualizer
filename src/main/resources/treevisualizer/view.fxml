<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<TabPane xmlns:fx="http://javafx.com/fxml" fx:controller="treevisualizer.Controller" tabMinWidth="80">
    <Tab text="Binary Tree">
        <BorderPane>
            <padding>
                <Insets bottom="15" left="15" right="15" top="5"/>
            </padding>
            <top>
                <HBox spacing="20">
                    <VBox alignment="BASELINE_CENTER">
                        <TextField prefWidth="100"/>
                        <Button text="Добавить элемент" prefWidth="130"/>
                    </VBox>
                    <VBox alignment="BASELINE_CENTER">
                        <TextField prefWidth="100"/>
                        <Button text="Найти элемент" prefWidth="130"/>
                    </VBox>
                </HBox>
            </top>
        </BorderPane>
    </Tab>
    <Tab text="Trie">
        <BorderPane>
            <padding>
                <Insets bottom="15" left="15" right="15" top="5"/>
            </padding>
            <top>
                <HBox spacing="20">
                    <VBox alignment="BASELINE_CENTER">
                        <TextField prefWidth="100"/>
                        <Button text="Добавить элемент" prefWidth="130"/>
                    </VBox>
                    <VBox alignment="BASELINE_CENTER">
                        <TextField prefWidth="100"/>
                        <Button text="Найти элемент" prefWidth="130"/>
                    </VBox>
                </HBox>
            </top>
            <center>
                <ScrollPane>
                    <Canvas fx:id="img" height="100" width="100"/>
                </ScrollPane>
            </center>
        </BorderPane>
    </Tab>
</TabPane>
